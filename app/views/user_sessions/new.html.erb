<div class="container mx-auto px-4 py-8">
  <div class="max-w-lg mx-auto my-10 bg-white shadow-lg rounded-lg">
    <h1 class="text-4xl font-bold text-center text-blue-800 py-6">ログイン</h1>
    <%= form_with url: login_path, class: "space-y-4 px-8 pb-8" do |f| %>
      <div>
        <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-gray-700" %>
      </div>
      <div>
        <%= f.label :password, class: "block text-lg font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-gray-700" %>
      </div>
      <%= f.submit "ログイン", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
    <div class='text-center mt-4'>
      <%= link_to '登録ページへ', new_user_path, class: "text-blue-600 hover:text-blue-800" %>
      <br>
      <%= link_to  t('.password_forget'), new_password_reset_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>

<%= form_with model: [@video], local: true, html: { multipart: true } do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :file_path, "Video File" %>
    <%= form.file_field :file_path, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :is_visible, "表示" %>
    <%= form.select :is_visible, [[ '表示する', true ], [ '表示しない', false ]], {}, { class: "form-select" } %>
  </div>

  <%= form.submit @video.new_record? ? '新規登録' : '更新', class: "btn btn-primary" %>
<% end %>

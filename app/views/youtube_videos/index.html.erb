<div class="container mx-auto mb-5 pt-2">
  <h1 class="text-3xl font-bold mb-4">Youtubeビデオ一覧</h1>
  <div class="flex flex-wrap -mx-3 mb-6">
    <%= render 'shared/search_form', q: @q %>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= render @youtube_videos %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-auto">
      <%= paginate @youtube_videos, class: "pagination" %>
    </div>
  </div>
</div>

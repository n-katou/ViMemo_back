<div class="container mb-5 pt-2 px-4 sm:px-6 lg:px-8 max-w-full sm:max-w-xl md:max-w-2xl lg:max-w-4xl">
  <h1 class="text-3xl font-bold mb-4 text-left">Youtubeビデオ一覧</h1>
  <div class="flex justify-left mb-6">
    <%= render 'shared/search_form', q: @q %>
  </div>
  <div class="mb-4">
    <%= link_to 'いいね数が多い順', youtube_videos_path(sort: 'likes_desc', q: params[:q]), class: "btn btn-accent" %>
    <%= link_to 'メモ数が多い順', youtube_videos_path(sort: 'notes_desc', q: params[:q]), class: "btn btn-accent" %>
  </div>
  <div class="flex justify-center">
    <div class="w-full">
      <%= render @youtube_videos %>
    </div>
  </div>
  <div class="flex justify-center">
    <div class="w-auto">
      <%= paginate @youtube_videos, class: "pagination" %>
    </div>
  </div>
</div>

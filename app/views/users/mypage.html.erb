<div class="container mx-auto px-4 w-full">
  <div class="mb-4">
    <h1>動画取得</h1>
    <%= form_with url: fetch_videos_by_genre_youtube_videos_path, method: :get, local: true, class: "w-full" do |form| %>
      <%= form.text_field :genre, class: "input input-bordered input-lg" , placeholder: "ジャンル or キーワード" %>
      <%= form.submit "取得", class: "btn" %>
    <% end %>
  </div>
  
  <div class="flex">
    <!-- 左側ナビゲーションバー -->
    <div class="flex-1">
      <ul class="nav flex-col">
        <li class="nav-item">
          <%= User.human_attribute_name(:avatar) %>
          <%= image_tag(current_user.avatar.url, width: '100', height: '100') %>
        </li>
        <li class="nav-item">
          <%= User.human_attribute_name(:name) %>
          <%= current_user.name %>
        </li>
        <li class="nav-item">
          <%= User.human_attribute_name(:email) %>
          <%= current_user.email %>
        </li>
      </ul>
      <%= link_to t('defaults.edit'), edit_mypage_path, class: 'btn btn-success' %>
      <%= link_to t('videos.create'), new_video_path, class: 'btn btn-primary' %>
    </div>

    <!-- 右側コンテンツエリア -->
    <div class="flex-1 w-full">
      <h1 class="text-xl font-bold mb-4">「いいね」した動画一覧</h1>
      <% if @liked_videos.any? %>
        <%= render @liked_videos %>
        <!-- ページネーション -->
        <div class="mt-4">
          <%= paginate @liked_videos %>
        </div>
      <% else %>
        <p>いいねした動画がありません。</p>
      <% end %>
    </div>
  </div>
</div>

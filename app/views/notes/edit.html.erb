<h2>メモの編集</h2>

<%= form_with model: [@youtube_video, @note], 
              url: youtube_video_note_path(@youtube_video, @note), 
              id: "edit_note-#{@note.id}", 
              class: 'edit_note',locale: true  do |form| %>
  <div class="form-group">
    <%= form.label :timestamp, "タイムスタンプ" %>
    <%= form.text_field :timestamp, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :content, "メモの内容" %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <%= form.submit "更新する", class: 'btn btn-primary' %>
<% end %>

<%= link_to '戻る', youtube_video_path(@youtube_video), class: 'btn btn-secondary' %>
